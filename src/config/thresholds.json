{
  "window_days": 15,
  "years_mode": "lastN",
  "lastN_years": 20,
  "min_sample_size": 300,
  "units_ui": "toggle", 
  "outlier_clip": [1, 99],
  "gust_proxy_percentile": 95,
  "conditions": {
    "hot": {
      "logic": "ANY", 
      "agg": "max",   
      "thresholds": { "T_min": 32, "HI_min": null }
    },
    "cold": {
      "logic": "ANY",
      "agg": "min",
      "thresholds": { "T_max": 0, "WC_max": -5 }
    },
    "windy": {
      "logic": "ANY",
      "agg": "max",
      "thresholds": { "V_min": 50, "gust_min": 70 }
    },
    "wet": {
      "logic": "ANY",
      "agg": "sum",
      "thresholds": { "P_daily": 25, "P_rate": 7.6 }
    },
    "muggy": {
      "logic": "ANY",
      "agg": "max",
      "thresholds": { "HI_min": 32, "Td_min": 21 }
    }
  },
  "ui_sliders": {
    "hot": { "T_min": [25,45], "HI_min": [27,46] },
    "cold": { "T_max": [-20,10], "WC_max": [-30,5] },
    "windy": { "V_min": [20,100], "gust_min": [30,120] },
    "wet": { "P_daily": [5,80], "P_rate": [2,30] },
    "muggy": { "HI_min": [27,46], "Td_min": [16,26] }
  }
}
